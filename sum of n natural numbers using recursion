#include <stdio.h>

int sum(int n) {
    if (n == 0)
        return 0;
    else
        return n + sum(n - 1);
}

int main() {
    int num;

    printf("Enter a natural number: ");
    scanf("%d", &num);

    if (num < 1) {
        printf("Please enter a natural number (1 or greater).\n");
    } else {
        int result = sum(num);
        printf("Sum of first %d natural numbers is %d\n", num, result);
    }

    return 0;
}
