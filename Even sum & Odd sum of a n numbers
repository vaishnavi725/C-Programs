#include <stdio.h>

int main() {
    int n, i, even_sum = 0, odd_sum = 0;

    // Input from user
    printf("Enter a number: ");
    scanf("%d", &n);

    // Loop from 1 to n
    for(i = 1; i <= n; i++) {
        if(i % 2 == 0)
            even_sum += i;
        else
            odd_sum += i;
    }

    // Output results
    printf("Sum of even numbers = %d\n", even_sum);
    printf("Sum of odd numbers = %d\n", odd_sum);

    return 0;
}
